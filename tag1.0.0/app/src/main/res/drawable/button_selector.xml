<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" > 
	<shape>
		<gradient 
			android:startColor="@color/btn" 
			android:endColor="#FFFFFF" 
			android:angle="270" /> 
			
		<stroke 
			android:width="2dp" 
			android:color="#DFE9F9" /> 
			
		<corners 
			android:radius="2dp" /> 
			
		<padding 
			android:left="10dp"
			android:top="2dp"
			android:right="10dp"
			android:bottom="2dp" />
	</shape>
</item>
<item> 
	<shape>
		<gradient
			android:startColor="@color/btn"
			android:endColor="@color/btn"
			android:angle="270" />
		
		<stroke
			android:width="2dp"
			android:color="#DFE9F9" />
		<corners 
			android:radius="2dp" /> 
		<padding
			android:left="10dp"
			android:top="2dp"
			android:right="10dp"
			android:bottom="2dp" />
	</shape>
</item>
</selector>